<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".struk"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="174dp"
            android:src="@drawable/elyo"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jl.KH.Muchtar Tabrani no.05 RT.04/RW.03, Kelurahan Perwira Kecamatan Bekasi Utara"
            android:textStyle="italic"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/datatransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Data Transaksi"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/datatransaksi">
                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/textnm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:hint="data product"
                        android:layout_toRightOf="@id/productName"/>
                    <TextView
                        android:id="@+id/priceProduct"
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         android:text="Price"
                        android:layout_marginLeft="10dp"
                         android:textStyle="bold"
                         android:textSize="15sp"
                        android:layout_below="@id/productName"/>
                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:hint="data price"
                        android:layout_below="@id/textnm"
                        android:layout_toRightOf="@id/priceProduct"/>

                    <TextView
                        android:id="@+id/qty"
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         android:text="Qty"
                        android:layout_marginLeft="10dp"
                         android:textSize="15sp"
                         android:textStyle="bold"
                        android:layout_below="@id/priceProduct"/>
                    <TextView
                         android:id="@+id/txtqty"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textStyle="bold"
                         android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:hint="data Qty"
                        android:layout_toRightOf="@id/priceProduct"
                        android:layout_below="@id/txtprice"/>
                    <TextView
                        android:id="@+id/totalHarga"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:layout_below="@id/qty"/>
                    <TextView
                        android:id="@+id/txttot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:hint="data Total Harga"
                        android:layout_toRightOf="@id/totalHarga"
                        android:layout_below="@id/txtqty"/>
            <TextView
                android:id="@+id/datapembeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATA PEMBELI"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/txttot"/>

            <TextView
                android:id="@+id/pembeli"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nama Pembeli "
                android:layout_below="@id/datapembeli"/>
            <TextView
                android:id="@+id/nmcust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/datapembeli"
                android:layout_toRightOf="@id/pembeli"
                android:hint="data Pembeli"/>

            <TextView
                android:id="@+id/nohp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="No Handphone"
                android:layout_below="@id/pembeli"/>
            <TextView
                android:id="@+id/nocust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nohp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/nmcust"
                android:hint="data No Hp"/>
            <TextView
                android:id="@+id/Alamat"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Alamat Pengiriman"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/nohp"/>

            <TextView
                android:id="@+id/almtcust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="data Alamat"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/nocust"
                android:layout_toRightOf="@id/nohp"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cetak"
        android:layout_gravity="center" />
</LinearLayout>






